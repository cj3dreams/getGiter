<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemRepoCardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:elevation="5dp"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    card_view:cardElevation="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/itemRepoLogoImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/itemRepoNameTx"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/itemRepoLogoImgView"
                android:ellipsize="end"
                android:maxLength="25"
                android:maxLines="1"
                android:textSize="18sp"
                tools:text="TestingRepoTestingRepoTestingRepo" />

            <TextView
                android:id="@+id/itemRepoDescTx"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemRepoNameTx"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/itemRepoLogoImgView"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="Description for 2 lines, It will work fine! Hmm looks good dfgdfgdfgdfgdfgdfgd" />


        </RelativeLayout>

        <TextView
            android:id="@+id/itemRepoCreatedAtTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="11.11.2022" />

        <TextView
            android:id="@+id/itemRepoDownloadTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="Загрузить"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>